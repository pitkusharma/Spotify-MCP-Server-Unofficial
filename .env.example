# App identity
APP_NAME=Spotify MCP Server (Unofficial)
ENV=development
DEBUG=true

# Server bind
PROTOCOL=http
HOST=127.0.0.1
PORT=8000

# Spotify OAuth credentials
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Spotify OAuth endpoints
SPOTIFY_AUTH_URL=https://accounts.spotify.com/authorize
SPOTIFY_TOKEN_URL=https://accounts.spotify.com/api/token

# Requested Spotify scopes
SUPPORTED_SCOPES=["user-read-private","user-read-email"]

# Token / state entropy
TOKEN_BYTES=32
STATE_BYTES=16

# CORS configuration, change them in production
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
